{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",    
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",  
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"  
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",  
      "destination": "/server/index.js"  
    },
    {
      "source": "/(.*)",  
      "destination": "/client/build/index.html"  
    }
  ]
}
